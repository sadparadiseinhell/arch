! Theme
#include "/home/ma/.colors/dracula-colors"


! dwm colors

!dwm.normbordercolor: #434C5E
!dwm.normbgcolor:     #2E3440
!dwm.normfgcolor:     #D8DEE9
!dwm.selbordercolor:  #5E81AC
!dwm.selbgcolor:      #5E81AC
!dwm.selfgcolor:      #ECEFF4


! dmenu colors

!dmenu.font:          Roboto:style=Bold:size=10
!dmenu.background:    #2E3440
!dmenu.foreground:    #D8DEE9
!dmenu.selbackground: #5E81AC
!dmenu.selforeground: #ECEFF4


! slock colors
!slock.init:          #2E3440
